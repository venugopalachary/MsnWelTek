<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/welteklogo"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginLeft="50px"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/welteklogo" />

    <ImageView
        android:id="@+id/msnlogo"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginRight="50px"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/msnlogo" />


 <LinearLayout
     android:id="@+id/venu"
     android:layout_marginTop="20dp"
     android:layout_below="@+id/msnlogo"
     android:layout_width="match_parent"
     android:layout_centerHorizontal="true"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
    <ImageView
        android:id="@+id/neuro"
        android:layout_width="500px"
        android:layout_height="300px"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/neuro" />

    <ImageView
        android:id="@+id/omega"
        android:layout_width="500px"
        android:layout_height="300px"
        android:adjustViewBounds="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/omega" />
   </LinearLayout>

    <ImageView
        android:id="@+id/cardez"
        android:layout_width="500px"
        android:layout_height="400px"
        android:layout_below="@+id/venu"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/cardez" />

    <LinearLayout
        android:id="@+id/madhu"
        android:layout_below="@+id/cardez"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cardio"
            android:layout_width="500px"
            android:layout_height="300px"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/cardio" />

        <ImageView
            android:id="@+id/joint"
            android:layout_width="500px"
            android:layout_height="300px"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/joint" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/playgamebutton"
        android:layout_width="450px"
        android:layout_height="450px"
        android:padding="65px"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/pgbutton" />

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/back" />


</RelativeLayout>